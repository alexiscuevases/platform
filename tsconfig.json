{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@templates/*": [
        "./src/app/_templates/*"
      ],
      "@configs/*": [
        "./src/configs/*"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@guards/*": [
        "./src/guards/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
      "@libs/*": [
        "./src/libs/*"
      ],
      "@middlewares/*": [
        "./src/middlewares/*"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@resources/*": [
        "./src/resources/*"
      ],
      "@schemas/*": [
        "./src/schemas/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@typescript/*": [
        "./src/typescript/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@validators/*": [
        "./src/validators/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
